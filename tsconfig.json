{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": false,  // Set to false for stricter type checking
    "esModuleInterop": true,  // Set to true if you're using ES Modules with interop
    "allowSyntheticDefaultImports": true,
    "strict": true,  // Keep strict mode enabled for type safety
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",  // Use "node" resolution strategy
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "incremental": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
